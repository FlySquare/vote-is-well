.ui.vertical.inverted.large.sidebar.menu.left
    .item
        a(href="#/")
            img.ui.mini.avatar.image(src="https://user-images.githubusercontent.com/6639874/42140145-497092a8-7da3-11e8-8028-8ec89adc6034.png")
            span(style="font-weight: bold") açık teyit
    .menu(style="font-size: 1.2em;")
        +each('menu')
            a.item(
                href!='{{.url}}'
                )
                b {{ .title }}
                +iff('.icon')
                    i.icon(class="{{.icon}}")
                +else
                    i.code.icon
                +endif

            +if('.submenu')
                .item
                    .menu
                        +each('.submenu')
                            a.item(
                                href!='{{menu[@index].url}}{{.url}}'
                                )
                                | {{ .title }}
                                +if('.icon')
                                    i.icon(class="{{.icon}}")
